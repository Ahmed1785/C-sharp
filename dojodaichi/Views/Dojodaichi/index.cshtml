            <p class="header" name="Meals">Meals: @ViewBag.Meals</p>
            <p class="header" name="Energy">Energy: @ViewBag.Energy</p>
        </div>
        <div class="main">
            <p>you played your dojodaichi</p>
        </div>
        <div class="footer">
            <form action="/feed" method="post">
                <input type="submit" class="button" value="Feed">
            </form>
            <form action="/Play" method="post">
                <input type="submit" "button" value="Play">
            </form>
            <form action="/Work" method="post">
                <input type="submit" "button" value="Work">
            </form>
            <form action="/Sleep" method="post">
                <input type="submit" "button" value="Sleep">
            </form>
            <form action="/Restart" method="post">
                <input type="submit" "button" value="Restart">
            </form>
        </div>
    </body>
</html>