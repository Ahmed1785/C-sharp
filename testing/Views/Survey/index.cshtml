<html>
<head>
<body>
    <h1>Welcome to Dojo Survey!</h1>
    @foreach(var error in ViewBag.Errors)
            {
                <p class="red">@error</p>
            }
    <form action="/success" method="post">
        <p>Your Name <input type="text" name="name" placeholder="your name"></p>

        <p>Dojo Location <select name="location">
            <option value="Seattle">Seattle</option>
            <option value="San Jose">San Jose</option>
            <option value="Dallas">Dallas</option>
            <option value="San Francisco">San Francisco</option></select>
        </p>
        <p>Favorite Language <select name="language">
            <option value="Python">Python</option>
            <option value="Mean">Mean</option>
            <option value="C#">C#</option>
            <option value="Java">Java</option></select>
        </p>
        <p> Comment (Optional):</p>
        <textarea name="Comment">

        </textarea><br>
        <input type="submit" value="submit">
    </form>
</body>
</head>
</html>
